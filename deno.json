{
  "imports": {
    "lume/": "https://deno.land/x/lume@v2.1.2/"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run --allow-read --allow-net=deno.land,0.0.0.0:3000 --allow-sys=networkInterfaces --allow-write=./_site -",
    "build": "deno task lume",
    "serve": "deno task lume -s"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ]
  },
  "fmt": {
    "exclude": [
      ".vscode/",
      "_site/",
      "**/*.md",
      "src/_includes/sass/pico/**/*"
    ]
  }
}
