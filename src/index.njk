<article>
    <header><h2>Posts</h2></header>
    {% for post in search.pages("type=post !hidden", "date=desc") -%}
    <section>
        <hgroup>
            <p><a href="{{ post.url | url() }}"><strong>{{post.title}}</strong></a></p>
            <p>
                <small>{{ post.date | date('HUMAN_DATE') }}, {{ post.readingInfo.minutes }} min read</small>
            </p>
        </hgroup>
        {{ post.excerpt | safe }}
        <p><a href="{{ post.url | url() }}"><small>Read moreâ€¦</small></a></p>
    </section>
    {%- if not forloop.last -%}<hr>{%- endif -%}
    {%- endfor %}
</article>
