<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sebastian Wiesner</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ "/assets/index.css" | url }}">
    <script>
      // Bootstrap should really offer a CDN build for prefers-color-scheme, see https://github.com/twbs/bootstrap/issues/39277#issuecomment-1752200756
      (() => {
        const isDark = window.matchMedia("(prefers-color-scheme: dark)");
        const getTheme = () => isDark.matches ? "dark" : "light";
        const update = () => document.documentElement.setAttribute("data-bs-theme", getTheme());
        isDark.addEventListener('change', update);
        update();
      })()
    </script>
    <script data-goatcounter="https://swsnr.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
    <style>
        .swsnr-icon-white {
          filter: invert(1);
        }

        .btn-swsnr-custom {
        --bs-btn-color: var(--swsnr-color);
        --bs-btn-bg: var(--swsnr-background);
        --bs-btn-border-color: var(--swsnr-background);
        --bs-btn-hover-color: var(--swsnr-color);
        --bs-btn-hover-bg: color-mix(in srgb, var(--swsnr-background), black 15%);
        --bs-btn-hover-border-color: color-mix(
            in srgb,
            var(--swsnr-background),
            black 20%
        );
        --bs-btn-focus-shadow-rgb: color-mix(
            in srgb,
            var(--swsnr-color),
            var(--swsnr-background) 15%
        );
        --bs-btn-active-color: var(--swsnr-color);
        --bs-btn-active-bg: color-mix(in srgb, var: (--swsnr-background), black 20%);
        --bs-btn-active-border-color: color-mix(
            in srgb,
            var(--swsnr-background),
            black 25%
        );
        }
    </style>
  </head>
  <body>
    <div class="container">
        <div class="row mt-3">
          <div class="col-sm-12 col-md-8 offset-md-2 col-xl-4 offset-xl-4">
            <div class="card text-center">
                <img class="card-img-top" src="{{header.avatar}}" />
                <div class="card-body">
                    <h5 class="card-title">{{header.title}}</h5>
                    <p class="card-text">{{header.description}}</p>
                    <div class="d-grid gap-3">
                    {% for link in links -%}
                        <a rel="me" class="btn btn-swsnr-custom" style="--swsnr-background: {{link.background}}; --swsnr-color: {{link.color}}" href="{{link.href}}"><img class="swsnr-icon-{{link.color}}" height="16" width="16" src="{{link.type | icon("simpleicons") }}"/> {{link.text}}</a>
                    {%- endfor %}
                    </div>
                </div>
            </div>
          </div>
        </div>
    </div>
  </body>
</html>
