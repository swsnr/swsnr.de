<!DOCTYPE html>
<html lang="{{ lang }}">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="color-scheme" content="light dark">
        <link rel="stylesheet" href="{{ "/assets/style.css" | url }}">
        <title>{{ metas.site }} | {{ title }}</title>
        <meta name="author" content="{{ author.name }}">
        <meta property="article:published_time" content="{{ date | date('ATOM') }}">
        <link rel="canonical" href="{{ url | url(true) }}">
        {%- if isProduction -%}
        <script data-goatcounter="https://swsnr.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
        {%- endif -%}
    </head>
    <body>
        <header>
            <nav>
                <ul>
                    <li><strong><a href="{{ "/" | url }}">{{metas.site}}</a></strong></li>
                </ul>
                <ul>
                    {% for link in navLinks %}<li><a href="{{ link.href | url }}">{{ link.text | safe }}</a></li>{% endfor %}
                </ul>
            </nav>
        </header>
        <main>
            {{ content | safe }}
        </main>
        <footer>
            <nav>
                <ul>
                    <li><a href="https://github.com/swsnr/swsnr.de">Sources</a></li>
                </ul>
            </nav>
        </footer>
  </body>
</html>
